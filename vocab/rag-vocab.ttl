@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rag: <http://example.org/rag-vocab#> .

<http://example.org/rag-vocab> rdf:type rdfs:Ontology ;
    rdfs:label "RAG System Vocabulary" ;
    rdfs:comment "Vocabulary for the Retrieval-Augmented Generation (RAG) system." .

### Classes
rag:RAGSystem rdf:type rdfs:Class ;
    rdfs:label "RAG" .

rag:Text rdf:type rdfs:Class ;
    rdfs:label "Text" ;
    rdfs:comment "A piece of text." .

rag:EmbeddingModel rdf:type rdfs:Class ;
    rdfs:label "Embedding Model" ;
    rdfs:comment "A model used to generate embeddings from user prompts." .

# TODO: Search method can be expanded to Search Engine
rag:SearchMethod rdf:type rdfs:Class ;
    rdfs:label "Search Method" ;
    rdfs:comment "The search method used to retrieve documents from the vector database based on the query" .

rag:LanguageModel rdf:type rdfs:Class ;
    rdfs:label "Language Model" ;
    rdfs:comment "A model used to generate responses from retrieved documents." .

rag:Embedding rdf:type rdfs:Class ;
    rdfs:label "Embedding" ;
    rdfs:comment "A vector representation of a piece of text." .

rag:KnowledgeBase rdf:type rdfs:Class ;
    rdfs:label "Knowledge Base" ;
    rdfs:comment "A database of vector representations of documents." .

### Subclasses
rag:UserQuery rdfs:subClassOf rag:Text ;
    rdfs:label "User Query" ;
    rdfs:comment "The query entered by the user." .

rag:Document rdfs:subClassOf rag:Text ;
    rdfs:label "Document" ;
    rdfs:comment "A document in the vector database." .

rag:PromptTemplate rdfs:subClassOf rag:Text ;
    rdfs:label "Prompt Template" ;
    rdfs:comment "A predefined template for generating responses." .

rag:Response rdfs:subClassOf rag:Text ;
    rdfs:label "Response" ;
    rdfs:comment "The response generated by the generator module." .

### Properties
rag:useEmbeddingModel rdf:type rdfs:ObjectProperty ;
    rdfs:domain rag:RAGSystem ;
    rdfs:range rag:EmbeddingModel ;
    rdfs:label "has Embedding Model" ;
    rdfs:comment "Relates the RAG system to the embedding model it uses." .

rag:useSearchMethod rdf:type rdfs:ObjectProperty ;
    rdfs:domain rag:RAGSystem ;
    rdfs:range rag:SearchMethod ;
    rdfs:label "has Search Method" ;
    rdfs:comment "Relates the RAG system to the search method it uses." .

rag:hasEmbedding rdf:type rdfs:ObjectProperty ;
    rdfs:domain rag:Text ;
    rdfs:range rag:Embedding ;
    rdfs:label "has Embedding" .

rag:useGenerationTemplate rdf:type rdfs:ObjectProperty ;
    rdfs:domain rag:RAGSystem ;
    rdfs:range rag:PromptTemplate ;
    rdfs:label "has Generation Template" ;
    rdfs:comment "Relates the RAG system to the generation template it uses." .
